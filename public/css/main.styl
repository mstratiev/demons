html, body, div, h1,h2,h3,h4, ul, li, a, span, p
	margin 0
	padding 0

header-height = 3rem

header
	height header-height
	line-height header-height
	position fixed
	top 0
	width 100%
	display block
	text-align center
	background-color white
	nav
		display inline-block
		ul
			list-style-type none
			li
				color black
				display inline-block
				padding-right 1rem
				a
					font-size 1.5rem
					color black
					text-decoration none
			li:last-child
				padding-left 0


main
	margin-top header-height
